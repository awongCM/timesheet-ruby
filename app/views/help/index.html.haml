
- if user_signed_in?
  %div
    = render "shared/body-panel/search-component"
    .clearfix
    .row
      .col-md-12.col-sm-12.col-xs-12
        .x_panel
          .x_title
            %h2 Help Page
            %ul.nav.navbar-right.panel_toolbox
              %li
                %a.collapse-link
                  %i.fa.fa-chevron-up
              %li.dropdown
                %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                  %i.fa.fa-wrench
                %ul.dropdown-menu{:role => "menu"}
                  %li
                    %a{:href => "#"} Settings 1
                  %li
                    %a{:href => "#"} Settings 2
              %li
                %a.close-link
                  %i.fa.fa-close
            .clearfix
          .x_content
            %ul
              %li
                %span Rails Guides - 
                %a(href="http://guides.rubyonrails.org")
                  http://guides.rubyonrails.org
              %li
                %span RailsCasts - 
                %a(href="http://railscasts.com/")
                  http://railscasts.com/
              %li
                %span Ruby Doc - 
                %a(href="http://www.ruby-doc.org/")
                  http://www.ruby-doc.org/
              %li
                %span Ruby Tapas - 
                %a(href="http://www.rubytapas.com/")
                  http://www.rubytapas.com/

- else
  %h1 Welcome to Rails

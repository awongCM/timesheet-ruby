= form_with model: @employee, url: @profile_url_path, local: true, id: "demo-form2", class: "form-horizontal form-label-left" do |form|
  .form-group
    .control-label.col-md-3.col-sm-3.col-xs-12
    .col-md-6.col-sm-6.col-xs-12
      %h5 User Information
  .form-group
    = form.label(:title, "Title", class: "control-label col-md-3 col-sm-3 col-xs-12")
    .col-md-6.col-sm-6.col-xs-12
      = form.text_field(:title, id: "title", class: "form-control col-md-7 col-xs-12")
  .form-group
    = form.label(:first_name, "First Name", class: "control-label col-md-3 col-sm-3 col-xs-12")
    .col-md-6.col-sm-6.col-xs-12
      = form.text_field(:first_name, id: "first_name", class: "form-control col-md-7 col-xs-12")
  .form-group
    = form.label(:last_name, "Last Name", class: "control-label col-md-3 col-sm-3 col-xs-12")
    .col-md-6.col-sm-6.col-xs-12
      = form.text_field(:last_name, id: "last_name", class: "form-control col-md-7 col-xs-12")
  .form-group
    = form.label(:date_of_birth, "DOB", class: "control-label col-md-3 col-sm-3 col-xs-12")
    .col-md-6.col-sm-6.col-xs-12
      = form.text_field(:date_of_birth, id: "date_of_birth", class: "form-control col-md-7 col-xs-12")
  .form-group
    = form.label(:job_title, "Job Title", class: "control-label col-md-3 col-sm-3 col-xs-12")
    .col-md-6.col-sm-6.col-xs-12
      = form.text_field(:job_title, id: "job_title", class: "form-control col-md-7 col-xs-12")
  .form-group
    = form.label(:address, "Addres", class: "control-label col-md-3 col-sm-3 col-xs-12")
    .col-md-6.col-sm-6.col-xs-12
      = form.text_field(:address, id: "address", class: "form-control col-md-7 col-xs-12")

  .ln_solid
  .form-group
    .col-md-6.col-sm-6.col-xs-12.col-md-offset-3
      = link_to("Cancel", profile_index_path, class: "btn btn-primary")
      = form.submit("Save", class: "btn btn-success")